[common]
; Путь к пользовательским данным (относительно рабочей директории или абсолютный)
user_data_path = user

; Путь к папке с плагинами
plugins_path = plugins

; Путь к ресурсам интерфейса
content_path = interface

; Путь к UI-интерфейсу
interface_path = interface/modern

; Путь к рекламным материалам
ad_path = ad

; Рабочий каталог для логов и временных файлов
working_directory = @WORKING_DIRECTORY@

; Путь к исполняемому файлу службы охраны (WatchService/guard)
; Относительно рабочей директории или абсолютный путь
guard_executable_path = guard${EXE_SUFFIX}

; Включить автономный режим (true/false)
;standalone = true

[topmost]
; Пример: список функций, включаемых в режиме topmost
;tclib = Режим кассира,SAM PIN,Инициализация банкомата

; Для добавления новых параметров используйте аналогичный формат.
; Все параметры должны быть задокументированы на русском языке для удобства пользователей.
