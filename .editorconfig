# Global settings for all files
root = true

[*]
# --- EXCLUSIONS ---
# Completely ignore these folders for all tools
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[/{build,vcpkg_installed,thirdparty,node_modules}/**]
# --- WEB & INTERFACE (QML, JS, HTML) ---
# QML and JS follow the same 4-space rule as C++ in Qt
generated_code = true
indent_style = unset

[*.{qml,js,html,css}]
# --- DOCUMENTATION (Markdown) ---
# Soft wraps and 2-space indentation are standard for MD
indent_size = 4

[*.md]
# --- BUILD SCRIPTS ---
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[*.{sh,py,cmake}]
# --- C++ SPECIFIC ---
# This ensures VS Code knows to use your .clang-format
indent_size = 4

[*.{cpp,h,hpp,mm}]
indent_style = space
indent_size = 4
