  // Optional: speed up file watching
  "files.watcherExclude": {
    "**/build/": true,
    "**/thirdparty/": true,
    "**/vcpkg_installed/": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.(cpp|cc|cxx|h|hpp)$",
        "cmd": "python ./.scripts/include_reflow.py --apply \"${file}\""
      }
    ]
  },
