  "cppcheck.excludes": [
    "${workspaceFolder}/thirdparty",
    "${workspaceFolder}/vcpkg_installed"
  ],
  "cppcheck.additionalArgs": [
    "--suppress=missingIncludeSystem",
    "--exclude=${workspaceFolder}/thirdparty",
