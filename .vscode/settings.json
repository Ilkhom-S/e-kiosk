{
    // Exclude build output, third-party, and vcpkg folders from search and IntelliSense
    "files.exclude": {
        "build/": true,
        "thirdparty/": false,
        "deprecated/": true,
        "vcpkg_installed/": true,
        "**/*.bak": true,
        // Exclude FR module on macOS (EKIOSK_ENABLE_FR=OFF - not compiled)
        "src/modules/Hardware/FR/": true
    },
    "search.exclude": {
        "build/": true,
        "thirdparty/": true,
        "deprecated/": true,
        "vcpkg_installed/": true
    },

    // Toggle this path when switching Qt5/Qt6 builds.
    // Qt6 (macOS): ${workspaceFolder}/build/macos-qt6/compile_commands.json
    // Qt5 (Win7):  ${workspaceFolder}/build/win7-qt5/compile_commands.json
    "C_Cpp.default.compileCommands": "${workspaceFolder}/build/macos-qt6/compile_commands.json",

    // Optional quick references (no effect on IntelliSense)
    "editor.formatOnSave": true,
    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "C_Cpp.errorSquiggles": "enabled",
    // Default to Qt5/Win7-compatible standards; compile_commands.json overrides per build.
    "C_Cpp.default.cppStandard": "c++14",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "macos-clang-arm64",
    "C_Cpp.codeAnalysis.clangTidy.enabled": true,
    "C_Cpp.codeAnalysis.clangTidy.config": "",
    "C_Cpp.codeAnalysis.clangTidy.path": "/opt/homebrew/opt/llvm/bin/clang-tidy",
    "C_Cpp.codeAnalysis.clangTidy.args": [
        "--extra-arg=-isysroot/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk",
        "-p=${workspaceFolder}/build/macos-qt6"
    ],
    "C_Cpp.formatting": "clangFormat",
    "C_Cpp.clang_format_style": "file",
    "C_Cpp.clang_format_path": "/opt/homebrew/opt/llvm/bin/clang-format",
    "editor.codeActionsOnSave": {
        "source.fixAll.clang-tidy": "explicit"
    },
    "cmake.configureOnOpen": true,
    "cmake.buildDirectory": "${workspaceFolder}/build/macos-qt6",
    "cmake.configureArgs": [],
    "cmake.buildArgs": [],
    "cmake.ctestArgs": [],
    "cmake.debugConfig": {
        "type": "cppdbg",
        "MIMode": "lldb",
        "logging": {
            "moduleLoad": false
        },
        "miDebuggerPath": "/Users/ilkhom/.vscode/extensions/ms-vscode.cpptools-1.30.3-darwin-arm64/debugAdapters/lldb-mi/bin/lldb-mi"
    },
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "chat.tools.terminal.autoApprove": {
        "clang++": true
    },
    "svg.preview.background": "dark-transparent",
    "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
        "cppcoreguidelines-pro-bounds-array-to-pointer-decay",
        "cppcoreguidelines-init-variables",
        "cppcoreguidelines-pro-type-member-init",
        "bugprone-macro-parentheses",
        "bugprone-switch-missing-default-case",
        "bugprone-branch-clone",
        "cppcoreguidelines-avoid-do-while",
        "modernize-use-default-member-init",
        "readability-convert-member-functions-to-static",
        "readability-identifier-naming",
        "cppcoreguidelines-special-member-functions",
        "hicpp-special-member-functions",
        "cppcoreguidelines-avoid-const-or-ref-data-members",
        "misc-non-private-member-variables-in-classes",
        "readability-redundant-access-specifiers",
        "cppcoreguidelines-avoid-non-const-global-variables",
        "modernize-use-equals-default",
        "cppcoreguidelines-macro-usage",
        "modernize-use-using",
        "modernize-avoid-bind",
        "modernize-return-braced-init-list",
        "readability-braces-around-statements",
        "readability-static-accessed-through-instance",
        "bugprone-suspicious-include"
    ],
    "C_Cpp.codeAnalysis.exclude": {
        "**/thirdparty/**": true,
        "**/deprecated/**": true,
        "**/vcpkg_installed/**": true,
        "**/build/**": true,
        "**/tests/plugins/common/MockObjects.h": true,
        "**/*_autogen/**": true,
        "**/moc_*.cpp": true,
        "**/ui_*.h": true,
        "**/qrc_*.cpp": true
    },
    "sqltools.useNodeRuntime": true,
    "sqltools.connections": [
        {
            "ssh": "Disabled",
            "previewLimit": 50,
            "server": "192.168.28.81",
            "port": 5432,
            "driver": "PostgreSQL",
            "name": "192.168.28.81_postgres",
            "group": "Payvand",
            "database": "helpdesk",
            "username": "postgres"
        },
        {
            "previewLimit": 50,
            "driver": "SQLite",
            "name": "E-Kiosk",
            "group": "Humo",
            "database": "${workspaceFolder:e-kiosk}/build/macos-qt6/bin/user/data.db"
        }
    ]
}
