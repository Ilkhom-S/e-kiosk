{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.(cpp|cc|cxx|h|hpp)$",
        "cmd": "python ./.scripts/include_reflow.py --apply \"${file}\""
      }
    ]
  },
  "editor.formatOnSave": true,
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "cSpell.words": [
    "Advapi",
    "ARGN",
    "AUTOMOC",
    "AUTORCC",
    "AUTOUIC",
    "CONFIRMOTP",
    "cppcheck",
    "DEBUGUTILS",
    "Dialup",
    "ekiosk",
    "EKSA",
    "endfunction",
    "HUMO",
    "LOADINGGPRSFORM",
    "lrelease",
    "MSVC",
    "multilanguage",
    "myapp",
    "mylib",
    "myplugin",
    "mytest",
    "NSIS",
    "psapi",
    "PSPC",
    "PUBLISHERINFO",
    "QCOMPARE",
    "qlonglong",
    "QTEST",
    "QVERIFY",
    "rasapi",
    "suppr",
    "SYSUTILS",
    "thirdparty",
    "бэкэнда",
    "купюроприёмника",
    "логгер",
    "пинга",
    "пингов"
  ],
  "cSpell.language": "en,ru",
  "C_Cpp.default.cppStandard": "c++14",
  "C_Cpp.default.cStandard": "c11",
  "C_Cpp.default.intelliSenseMode": "windows-msvc-x64",
  "clang-format.executable": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\VC\\Tools\\Llvm\\bin\\clang-format.exe",
  "clang-tidy.executable": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\VC\\Tools\\Llvm\\bin\\clang-tidy.exe",
  "C_Cpp.clang_format_path": "C:\\Program Files\\Microsoft Visual Studio\\18\\Community\\VC\\Tools\\Llvm\\bin\\clang-format.exe",
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.path": "clang-tidy",
  "C_Cpp.formatting": "clangFormat",
  "editor.codeActionsOnSave": {
    "source.fixAll.clang-tidy": "explicit"
  },
  "cmake.configureOnOpen": true,
  "cmake.defaultActiveConfigurePreset": "msvc",
  "cmake.buildPreset": "msvc",
  "cmake.buildDirectory": "${workspaceFolder}/build",
  "cmake.configureArgs": [],
  "cmake.buildArgs": [],
  "cmake.ctestArgs": [],
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools"
}
