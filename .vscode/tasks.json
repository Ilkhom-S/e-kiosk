{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Include Reflow (current file)",
      "type": "shell",
      "command": "python3 ./.scripts/include_reflow.py --apply \"${file}\"",
      "windows": {
        "command": "python ./.scripts/include_reflow.py --apply \"${file}\""
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "Include Reflow (all tracked)",
      "type": "shell",
      "command": "python3 ./.scripts/include_reflow.py --apply $(git ls-files '*.cpp' '*.cc' '*.cxx' '*.h' '*.hpp')",
      "windows": {
        "command": "python ./.scripts/include_reflow.py --apply $(git ls-files '*.cpp' '*.cc' '*.cxx' '*.h' '*.hpp')"
      },
      "problemMatcher": [],
      "group": "none",
      "presentation": {
        "reveal": "always"
      }
    },

    {
      "args": ["--build", "${workspaceFolder}/build/macos-qt6"],
      "command": "cmake",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "label": "build",
      "presentation": {
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "silent"
      },
      "problemMatcher": "$gcc",
      "type": "shell"
    },
    {
      "args": [
        "-S",
        "${workspaceFolder}",
        "-B",
        "${workspaceFolder}/build/macos-qt6",
        "-DCMAKE_PREFIX_PATH=/usr/local/opt/qt6"
      ],
      "command": "cmake",
      "group": "build",
      "label": "configure",
      "presentation": {
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "silent"
      },
      "type": "shell"
    },
    {
      "args": [
        "--build",
        "${workspaceFolder}/build/macos-qt6",
        "--target",
        "clean"
      ],
      "command": "cmake",
      "group": "build",
      "label": "clean",
      "presentation": {
        "echo": true,
        "focus": false,
        "panel": "shared",
        "reveal": "silent"
      },
      "type": "shell"
    }
  ]
}
