---
BasedOnStyle: LLVM
IndentWidth: 4
UseTab: Never
ColumnLimit: 0

# Sort and regroup includes into ordered categories. Adjust the regexes
# below if your include paths differ. We enable SortIncludes but
# prioritize the Common/QtHeadersBegin/End wrappers so Qt includes
# remain grouped between them.
SortIncludes: true
IncludeBlocks: Regroup
IncludeIsMainRegex: '([-_A-Za-z0-9]+)\\.(cpp|cc|cxx)$'
IncludeCategories:
  - Regex: '^".*"$'
    Priority: 1
  - Regex: '^<Common/QtHeadersBegin\\.h>$'
    Priority: 2
  - Regex: '^<Qt([A-Za-z0-9/]*)?>.*$'
    Priority: 3
  - Regex: '^<Common/QtHeadersEnd\\.h>$'
    Priority: 4
  - Regex: '^<Common/.*>$'
    Priority: 5
  - Regex: '^<boost/.*>$'
    Priority: 6
  - Regex: '^<.*>$'
    Priority: 7
...
# TerminalClient C++ Code Style
# Based on existing codebase conventions
# See: docs/coding-standards.md for detailed guidelines

---
Language: Cpp
Standard: c++14
BasedOnStyle: Microsoft

# Indentation - Use tabs
IndentWidth: 4
TabWidth: 4
UseTab: Always
ContinuationIndentWidth: 4
IndentCaseLabels: false
IndentPPDirectives: None
IndentExternBlock: NoIndent
NamespaceIndentation: All
AccessModifierOffset: -4

# Braces - Allman style (Microsoft)
BreakBeforeBraces: Allman

# Alignment
AlignAfterOpenBracket: Align
ColumnLimit: 120

# Group and sort includes. Adjust regexes if your include paths differ.
SortIncludes: true
IncludeBlocks: Regroup
IncludeIsMainRegex: '([-_A-Za-z0-9]+)\\.(cpp|cc|cxx|c\\+\\+)$'
IncludeCategories:
  - Regex: '^".*"$'
    Priority: 1
  - Regex: '^<Common/QtHeadersBegin\\.h>$'
    Priority: 2
  - Regex: '^<Qt([A-Za-z0-9/]*)?>.*$'
    Priority: 3
  - Regex: '^<Common/QtHeadersEnd\\.h>$'
    Priority: 4
  - Regex: '^<Common/.*>$'
    Priority: 5
  - Regex: '^<boost/.*>$'
    Priority: 6
  - Regex: '^<.*>$'
    Priority: 7

# C++ language/standard

# Qt-related macros to keep intact
StatementMacros:
  - Q_OBJECT
  - Q_PROPERTY
  - Q_SIGNAL
  - Q_SIGNALS
  - Q_SLOT
  - Q_SLOTS
  - Q_EMIT
  - Q_INVOKABLE
  - Q_DECLARE_METATYPE
  - Q_ENUMS
  - Q_FLAGS
  - Q_INTERFACES
  - Q_CLASSINFO
  - QTEST_MAIN
