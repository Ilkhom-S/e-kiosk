# .clang-format (C++14 / C11)
---
Language: Cpp
BasedOnStyle: Qt

# Explicitly set standard for C++14 compatibility
Standard: c++11

# Indentation & Alignment
IndentWidth: 4
ColumnLimit: 100
PointerAlignment: Right

# Qt-specific handling for C11/C++14
SpaceAfterCStyleCast: true
IncludeCategories:
  - Regex: '^<Q.*'
    Priority: 10
  - Regex: '^<.*'
    Priority: 20
  - Regex: '.*'
    Priority: 30

# Avoid modern C++17 nested namespaces (e.g., namespace A::B)
# This ensures code stays compatible with older compilers
CompactNamespaces: false
