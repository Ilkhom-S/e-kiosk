BasedOnStyle: LLVM
IndentWidth: 4
UseTab: Never
ColumnLimit: 0

# Sort and regroup includes into ordered categories. Adjust the regexes
# below if your include paths differ.
# Order: Standard library (STL), Qt (wrapped between Common/QtHeadersBegin/End),
# Modules (Common/...), SDK, Third-party (boost), Project (quoted), then other includes.
SortIncludes: false
IncludeBlocks: Regroup
IncludeIsMainRegex: '([-_A-Za-z0-9]+)\\.(cpp|cc|cxx|c\\+\\+|c|h|hpp)$'
IncludeCategories:
  - Regex: '^<(?:algorithm|array|atomic|bitset|cassert|cctype|cerrno|cfenv|cfloat|chrono|cinttypes|climits|cmath|complex|condition_variable|csetjmp|csignal|cstdarg|cstdbool|cstddef|cstdint|cstdio|cstdlib|cstring|ctgmath|ctime|cwchar|cwctype|iomanip|iosfwd|iostream|istream|iterator|limits|list|locale|map|memory|mutex|new|numeric|ostream|queue|random|ratio|regex|scoped_allocator|set|sstream|stack|stdexcept|string|strstream|system_error|tuple|typeindex|typeinfo|type_traits|unordered_map|unordered_set|utility|valarray|vector)>$'
    Priority: 1
  - Regex: '^<Common/QtHeadersBegin\\.h>$'
    Priority: 2
  - Regex: '^<(?:Qt[A-Za-z0-9_/]*|Q[A-Za-z0-9_]*)[^>]*>$'
    Priority: 3
  - Regex: '^<Common/QtHeadersEnd\\.h>$'
    Priority: 4
  - Regex: '^<Common/.*>$'
    Priority: 5
  - Regex: '^<SDK/.*>$'
    Priority: 6
  - Regex: '^<boost/.*>$'
    Priority: 7
  - Regex: '^".*"$'
    Priority: 8
  - Regex: '^<.*>$'
    Priority: 9
...
# TerminalClient C++ Code Style
# Based on existing codebase conventions
# See: docs/coding-standards.md for detailed guidelines

---
Language: Cpp
Standard: c++14
BasedOnStyle: Microsoft

# Indentation - Use tabs
IndentWidth: 4
TabWidth: 4
UseTab: Always
ContinuationIndentWidth: 4
IndentCaseLabels: false
IndentPPDirectives: None
IndentExternBlock: NoIndent
NamespaceIndentation: All
AccessModifierOffset: -4

# Braces - Allman style (Microsoft)
BreakBeforeBraces: Allman

# Alignment
AlignAfterOpenBracket: Align
ColumnLimit: 120

# Qt-related macros to keep intact
StatementMacros:
  - Q_OBJECT
  - Q_PROPERTY
  - Q_SIGNAL
  - Q_SIGNALS
  - Q_SLOT
  - Q_SLOTS
  - Q_EMIT
  - Q_INVOKABLE
  - Q_DECLARE_METATYPE
  - Q_ENUMS
  - Q_FLAGS
  - Q_INTERFACES
  - Q_CLASSINFO
  - QTEST_MAIN
